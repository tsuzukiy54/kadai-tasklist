<%= form_for(task) do |f| %>

<% if task.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% task.errors.full_messages.each do |messager| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= f.label :Status, 'ステータス' %>
<%= f.text_field :Status %>

<%= f.label :content, 'タスク' %>
<%= f.text_field :content %>

<%= f.submit '登録' %>

<% end %>

